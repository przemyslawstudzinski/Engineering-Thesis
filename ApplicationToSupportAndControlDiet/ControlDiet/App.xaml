<Application
    x:Class="ApplicationToSupportAndControlDiet.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ApplicationToSupportAndControlDiet"
    RequestedTheme="Light">
    <Application.Resources>
        <Style x:Key="TextBoxError" TargetType="TextBox">
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="BorderBrush" Value="Red" />
            </Style>
        <Style x:Key="CalendarError" TargetType="CalendarDatePicker">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="Red" />
        </Style>
        <Style x:Key="AutoSuggestError" TargetType="AutoSuggestBox">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="Red" />
        </Style>
    </Application.Resources>
</Application>
