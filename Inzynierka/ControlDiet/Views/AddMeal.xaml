<Page
    x:Class="ApplicationToSupportAndControlDiet.Views.AddMeal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ApplicationToSupportAndControlDiet.Models"
    xmlns:data="using:ApplicationToSupportAndControlDiet.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel >

            <StackPanel  Name="MainStackPanel" Orientation="Vertical"  RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="0,-150,0,0">
                <TextBlock x:Name="Title" Text="Create new meal" FontSize="20" FontStretch="Expanded" Foreground="Black" Margin="0,0,0,20" />
                <StackPanel Orientation="Horizontal" Margin="0,15,0,20">
                    <TextBox Name="NameBox" Width="370" Header="Name: "/>
                    <TimePicker x:Name = "TimePicker" Header = "Time:" Margin="100, 0, 0, 0"/>
                    <TextBlock x:Name = "Control1Output" FontSize = "24"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,15,0,20">
                    <TextBlock x:Name="FoodProducts" Text="Food products:" FontSize="20" FontStretch="Expanded" Foreground="Black" Margin="0,0,0,20" />
                </StackPanel>
                <AutoSuggestBox x:Name="SuggestProductsBox" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                Width="500" Height="Auto" Header="Search products" PlaceholderText="Search products..." 
                                TextChanged="SuggestProducts_TextChanged" SuggestionChosen="SuggestProducts_SuggestionChosen">
                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding Name}" />
                            </TextBlock>
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>
                </AutoSuggestBox>
            </StackPanel>
            

            <RelativePanel Name="Products" RelativePanel.Below="MainStackPanel" RelativePanel.AlignHorizontalCenterWithPanel="True" Height="200" Width="800" >
                <ScrollViewer VerticalScrollBarVisibility="Visible"  VerticalScrollMode="Enabled" >

                    <GridView x:Name="ProductsView" IsItemClickEnabled="True" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center"
                  IsSwipeEnabled="True" SelectionMode="Single">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="data:Product" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" FontSize="18" Text="{x:Bind Name}" HorizontalAlignment="Right"></TextBlock>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Energy"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" FontSize="10" Text="{x:Bind Energy }" HorizontalAlignment="Right"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </ScrollViewer>
            </RelativePanel>






            <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="Products" Orientation="Horizontal">
                <StackPanel>
                    <Button Tag="AddProduct" x:Name="AddProduct" Background="Black" >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Add" Foreground="White" />
                            <TextBlock Text="Add Product" Width="100" Margin="30,0,0,0" Foreground="White" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel>
                    <Button Tag="SaveMeal" x:Name="SaveMeal" Background="Black" Click="SubmitButton_Click" >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Accept" Foreground="White" />
                            <TextBlock Text="Save Meal" Width="100" Margin="30,0,0,0" Foreground="White" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
            
        </RelativePanel>
    </Grid>
</Page>
