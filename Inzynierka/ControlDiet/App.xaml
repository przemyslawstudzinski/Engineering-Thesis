<Application
    x:Class="ApplicationToSupportAndControlDiet.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ApplicationToSupportAndControlDiet"
    xmlns:viewModels="using:ApplicationToSupportAndControlDiet.ViewModels"
    RequestedTheme="Light">
    <Application.Resources>
        <viewModels:ViewModelLocator x:Key="Locator" />
            <Style x:Key="TextBoxError" TargetType="TextBox">
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="BorderBrush" Value="Red" />
            </Style>
    </Application.Resources>
</Application>
